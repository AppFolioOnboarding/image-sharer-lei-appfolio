<p id="notice"><%= notice %></p>

<p>
  <strong>url:</strong>
  <%= @image.web_url %>
</p>

<p>
  <img src="<%= @image.web_url %>" width="300">

  <%= link_to 'Delete', @image, method: :delete, data: { confirm: 'Are you sure?' }, id: 'js-delete' %>

  <% if @image.mytag_list.empty? %>
    <br><strong id="have_no_tag"> (This image does not have tags.) </strong>
  <% else %>
    <ul>
      <% @image.mytag_list.each do |tag| %>
        <li class="my_tag">
          <%= link_to tag, images_path(search_tag: tag), class: 'js-tag' %>
        </li>
      <% end %>
    </ul>
  <% end %>
</p>

<p>
  <%= link_to 'All Images', images_path, id: "back-to-index" %>
</p>

<p>
  <%= link_to 'Home', root_path %>
</p>
